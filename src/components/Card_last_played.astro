---
const { billede, overskrift } = Astro.props;
---

<article>
  <img src={billede} />
  <h2>{overskrift}</h2>
</article>

<style>
  article img {
    width: 50px;
    height: 50px;
    border-radius: 5px 0px 0px 5px;
  }

  article {
    display: flex;
    background-color: #1f1f1f;
    height: 50px;
    border-radius: 5px;
    align-items: center;
  }

  h2 {
    font-family: Arial, Helvetica, sans-serif;
    color: white;
    font-weight: bold;
    padding-left: 10px;
    font-size: 0.8rem;
  }
</style>
